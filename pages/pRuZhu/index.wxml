<!--pages/pRuZhu/index.wxml-->
<view class='container'>
  <view class='content'>
  <form bindsubmit="formSubmit" report-submit='{{true}}'>
    <view class='title'>
      <i class='iconfont icon-fenzucopy'></i>
      请填写个人信息
    </view>
    <view class='item'>
      <view class='label'>昵称</view>
      <input placeholder='请输入您的昵称' name='nickname'></input>
    </view>
    <view class='item'>
      <view class='label'>手机号</view>
      <input type='number' placeholder='请输入您的手机号' name='mobile'></input>
    </view>
    <view class='item'>
      <view class='label'>职业</view>
      <input placeholder='请输入您的职业' name='work'></input>
    </view>
    <view class='item' style='border-bottom:1rpx solid #eee'>
      <view class='label'>所在城市</view>
      <input placeholder='请选择所在城市' name='city'></input>
    </view>
    <button type='warn' class="s-b" form-type='submit'>确认申请</button>
    </form>
  </view>
</view>
<shareAndKefu bind:myevent="myevent" shareVal="{{false}}"></shareAndKefu>
