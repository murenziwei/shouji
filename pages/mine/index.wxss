}
.topBg{
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  height: 250rpx;
  background: #fd746e;
  z-index: -1;
  
}
.content{
  margin: 0rpx 30rpx 0;
  background: #fff;
  border-radius: 10rpx;
}
