
.rightBotttom{
  position: fixed;
  bottom: 100rpx;
  right: 10rpx;
  width: 70rpx;
  z-index: 100;
  font-size: 17rpx;
  text-align: center;
  color: #999;
}
.c-image,
.rightBotttom image{
  width: 50rpx;
  height: 50rpx;
  margin:auto;
  margin-top: 20rpx;

}
.coverC{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
}
.topC{
  flex: 1;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: relative;
}
.topC .image{
  width: 70%;
  height: 950rpx;
  border-radius: 10rpx;
  position: relative;
  z-index: 12;
}
.not{
  position: absolute;
  top: 0;
  width: 100%;
  bottom:0;
  text-align:center;
}
.bottomC{
  flex: 0 0 140rpx;
  background: #fff;
  display: flex;
  padding: 0rpx 0;
}
.i image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 4rpx;
}
.i{
  flex: 1;
  font-size: 28rpx;
  background-color:transparent;
  border:none;
  outline:none;
  border-radius:0;
  line-height:unset;
}
.i:after{
  border:none;
}


